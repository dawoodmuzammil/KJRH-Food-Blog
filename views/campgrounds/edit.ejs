<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h2 style="text-align: center">Edit <%= restaurant.name %></h2>
        <div style="width: 30%; margin: 30px auto; text-align: center">
            <form action="/restaurants/<%= restaurant._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="restaurant[name]" value="<%= restaurant.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value= "<%= restaurant.image%>" name="restaurant[image]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value= "<%= restaurant.description%>" name="restaurant[description]">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" placeholder="Name">
                </div>
                
            </form>
            <a href="/restaurants">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>