<% include ./partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center"><strong>Login</strong></h1>
        <div style="width: 30%; margin: 30px auto; text-align: center">
			<form action="/login" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="username" placeholder="Username">
				</div>
				
				<div class="form-group">
					<input class="form-control" type="password" name="password" placeholder="Password">
				</div>
				
				<div class="form-group">
					<input class="btn btn-lg btn-primary btn-block" type="submit" name="submit" value="Login">
				</div>
			</form>
			<div>
				<span style="float: left"><a  href="#">Forgot password?</a></span>        
				<span style="float: right"><a  href="/register">Create account</a></span> 
				<a  href="/restaurants/">Go Back</a>
			</div>
        </div>
    </div>
</div>

<% include ./partials/footer %>