<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h2 style="text-align: center">Add a new comment to <%= restaurant.name %></h2>
        <div style="width: 30%; margin: 30px auto; text-align: center">
            <form action="/restaurants/<%= restaurant._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Comment..." name="comment[text]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder=<%=currentUser.username%> name="comment[author]" value="<%=currentUser.username%>" readonly>
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" placeholder="Name">
                </div>
                
            </form>
            <a href="/restaurants/<%= restaurant._id %>">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>